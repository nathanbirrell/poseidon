<div class="optimum-vis <%= value < min || value > max ? '--outside' : '--inside'%>">
  <div class="optimum-vis__meta"><%= label %></div>
  <div class="optimum-vis__visual">
    <input type="range" min="<%= min %>"
      max="<%= max %>" value="<%= value %>" step="<%= step %>" disabled>
    <span class="optimum-vis__ROC" style="left: <%= rocDirection === 'right' ? ((value - min)/(max-min) * 100) : ((value - min)/(max-min) * 100 - roc)%>%; width: <%= roc %>%;"></span>
    <span class="optimum-vis__current" style="left: <%= ((value - min)/(max-min) * 100) %>%;"><%= value %></span>
    <div class="optimum-vis__markings">
      <span class="optimum-vis__min"><%= min %><%= unit %></span>
      <span class="optimum-vis__max"><%= max %><%= unit %></span>
    </div>
  </div>
</div>
