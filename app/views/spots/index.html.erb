<p id="notice"><%= notice %></p>

<h1>Spots</h1>

<div class="small-4 large-6">
  <%= link_to '+ NEW SPOT', new_spot_path, class: 'button' %>
</div>
<div class="small-4 large-6">
  <form>
    <select id="view-select" name="view-select">
      <option value="list">List</option>
      <option value="tiles" selected>Tiles</option>
    </select>
  </form>
</div>

<% @spots.each do |spot| %>
  <div class="large-4 small-12 spot-tile">
    <a href="#">
      <div class="spot-tile__image" style="background-image: url('http://blogs.acu.edu.au/international/files/2011/03/Bells-Beach-2008.jpg')"></div>
      <div class="spot-tile__summary">
        <h3><%= spot.name %></h3>
        <div class="stats">
          <span class="stat-item">79</span>
          <span class="stat-item">64</span>
          <span class="stat-item">83</span>
          <span class="stat-item primary">71</span>
        </div>
      </div>
    </a>
  </div>
<% end %>

<% @spots.each do |spot| %>
  <a href="#">
    <div class="small-12 spot-list-item">
      <div class="spot-list-item__main-rating --positive"><span>89</span></div>
      <h3 class="spot-list-item__name"><%= spot.name %></h3>
      <div class="spot-list-item__sub-rating-group">
        <span class="spot-list-item__sub-rating">89</span>
        <span class="spot-list-item__sub-rating">89</span>
        <span class="spot-list-item__sub-rating">89</span>
      </div>
    </div>
  </a>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Optimal wind</th>
      <th>Optimal swell</th>
      <th>Season</th>
    </tr>
  </thead>

  <tbody>
    <% @spots.each do |spot| %>
      <tr>
        <td>
          <%= link_to spot.name, spot %> <br>
          <%= link_to 'Edit', edit_spot_path(spot) %>
          <%= link_to 'Destroy', spot, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%= spot.description %></td>
        <td><%= spot.wind_optimal_direction_min_degrees %></td>
        <td><%= spot.swell_optimal_direction_min_degrees %></td>
        <td><%= spot.season %></td>
      </tr>
    <% end %>
  </tbody>
</table>
