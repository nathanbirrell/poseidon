<p id="notice"><%= notice %></p>

<div class="row">
  <div class="small-12 medium-11 columns small-centered">
    <h1>Spots</h1>

    <div class="row">
      <% if user_signed_in? %>
        <div class="small-4 large-6 columns">
          <%= link_to '+ NEW SPOT', new_spot_path, class: 'button' %>
        </div>
      <% end %>

      <div class="small-4 large-6 columns">
        <form>
          <select id="view-select" name="view-select">
            <option value="list">List</option>
            <option value="tiles" selected>Tiles</option>
          </select>
        </form>
      </div>
    </div>

    <div class="row">
      <h3 class="columns">Current Conditions</h3>
      <% @spots.each do |spot| %>
        <%= render partial: 'partials/spot-tile', locals: {spot: spot, type: 'current'} %>
      <% end %>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <h3>Collapsed</h3>
        <% @spots.each do |spot| %>
          <%= render partial: 'partials/spot-list-item', locals: {spot: spot, type: 'current'} %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <h3 class="columns">Forecasts</h3>
      <% @spots.each do |spot| %>
        <%= render partial: 'partials/spot-tile', locals: {spot: spot, type: 'forecast'} %>
      <% end %>
    </div>

    <div class="row">
      <div class="medium-6 columns">
        <h3>Collapsed</h3>
        <% @spots.each do |spot| %>
          <%= render partial: 'partials/spot-list-item', locals: {spot: spot, type: 'forecast'} %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<br><br>
