<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
  <h3><i class="icon --icon-check-square --large" style="background-image: url(&quot;http://localhost:8080/packs/log-in.svg&quot;);"></i> Log in to Poseidon</h3>
  <%= devise_error_messages! %>

  <%#- if devise_mapping.registerable? %>
    <%#= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
  <%# end -%>

  <div class="input-holder --with-border --icon">
    <i class="icon --icon-check-square --large" style="background-image: url(&quot;http://localhost:8080/packs/mail-dark.svg&quot;);"></i>
    <%= f.label :email, class: 'show-for-sr' %>
    <%= f.email_field :email, :autofocus => true, type: 'text', placeholder: 'Email', autocomplete: 'email' %>
  </div>

  <div class="input-holder --with-border --icon">
    <i class="icon --icon-check-square --large" style="background-image: url(&quot;http://localhost:8080/packs/lock-dark.svg&quot;);"></i>
    <%= f.label :password, class: 'show-for-sr' %>
    <%= f.password_field :password, type: 'password', placeholder: 'Password', autocomplete: 'password' %>
  </div>

  <%= f.submit 'Sign in', :class => 'btn' %><br />

  <%- if devise_mapping.recoverable? %>
    <%= link_to "Forgot password?", new_password_path(resource_name), class: 'small' %>
  <% end -%>

  <% if devise_mapping.rememberable? -%>
    <div class="hide">
      <%= f.check_box :remember_me, :as => :hidden, :value => true %>
    </div>
  <% end -%>
<% end %>
